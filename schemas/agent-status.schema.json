{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kynee.dev/schemas/agent-status.schema.json",
  "title": "KYNEÄ’ Agent Status",
  "description": "Schema for agent heartbeat and status messages",
  "type": "object",
  "properties": {
    "agent_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique agent device identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When this status was generated"
    },
    "status": {
      "type": "string",
      "enum": ["online", "offline", "idle", "scanning", "transmitting", "error"],
      "description": "Current agent state"
    },
    "engagement_id": {
      "type": "string",
      "description": "Current active engagement (null if idle)"
    },
    "system": {
      "type": "object",
      "properties": {
        "hostname": {"type": "string"},
        "os": {"type": "string", "examples": ["Kali Linux ARM 2024.4"]},
        "kernel": {"type": "string"},
        "uptime_seconds": {"type": "integer", "minimum": 0},
        "cpu_percent": {"type": "number", "minimum": 0, "maximum": 100},
        "memory_percent": {"type": "number", "minimum": 0, "maximum": 100},
        "disk_percent": {"type": "number", "minimum": 0, "maximum": 100},
        "temperature_celsius": {"type": "number"}
      }
    },
    "network": {
      "type": "object",
      "properties": {
        "interfaces": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "ip_address": {"type": "string"},
              "mac_address": {"type": "string"},
              "status": {"type": "string", "enum": ["up", "down"]}
            }
          }
        },
        "vpn_connected": {"type": "boolean"},
        "vpn_endpoint": {"type": "string"}
      }
    },
    "hardware": {
      "type": "object",
      "properties": {
        "model": {"type": "string", "examples": ["Raspberry Pi 3 Model B+"]},
        "wifi_adapter": {"type": "string"},
        "bluetooth_adapter": {"type": "string"},
        "flipper_connected": {"type": "boolean"},
        "power_source": {"type": "string", "enum": ["usb", "battery", "unknown"]},
        "battery_percent": {"type": "number", "minimum": 0, "maximum": 100}
      }
    },
    "current_job": {
      "type": "object",
      "properties": {
        "job_id": {"type": "string"},
        "job_type": {"type": "string"},
        "started_at": {"type": "string", "format": "date-time"},
        "progress_percent": {"type": "number", "minimum": 0, "maximum": 100}
      }
    },
    "last_error": {
      "type": "object",
      "properties": {
        "timestamp": {"type": "string", "format": "date-time"},
        "error_type": {"type": "string"},
        "message": {"type": "string"}
      }
    },
    "version": {
      "type": "string",
      "description": "Agent software version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "required": [
    "agent_id",
    "timestamp",
    "status",
    "version"
  ],
  "additionalProperties": false
}
