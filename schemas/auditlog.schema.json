{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kynee.dev/schemas/auditlog.schema.json",
  "title": "KYNEĒ Audit Log Entry",
  "description": "Immutable audit log schema for all KYNEĒ agent actions",
  "type": "object",
  "properties": {
    "log_id": {
      "type": "string",
      "description": "Unique log entry identifier",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "description": "Action timestamp (ISO 8601 UTC)",
      "format": "date-time"
    },
    "engagement_id": {
      "type": "string",
      "description": "Associated engagement ID",
      "pattern": "^ENG-[0-9]{4}-[0-9]{3}$"
    },
    "agent_id": {
      "type": "string",
      "description": "Agent device UUID",
      "format": "uuid"
    },
    "operator_id": {
      "type": "string",
      "description": "Operator who approved the action (email or username)",
      "format": "email"
    },
    "action": {
      "type": "string",
      "description": "Action performed",
      "enum": [
        "agent_enrolled",
        "engagement_started",
        "engagement_stopped",
        "network_scan",
        "wireless_scan",
        "bluetooth_scan",
        "flipper_rfid_read",
        "flipper_nfc_read",
        "flipper_subghz_scan",
        "flipper_ir_capture",
        "flipper_badusb_execute",
        "credential_test",
        "vulnerability_exploit",
        "data_exfiltration",
        "scope_violation_blocked",
        "policy_override",
        "ai_suggestion_generated",
        "ai_suggestion_approved",
        "ai_suggestion_rejected",
        "finding_created",
        "finding_verified",
        "report_generated"
      ]
    },
    "target": {
      "type": "object",
      "description": "Action target (if applicable)",
      "properties": {
        "ip_address": {
          "type": "string",
          "format": "ipv4"
        },
        "mac_address": {
          "type": "string"
        },
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "location": {
          "type": "string",
          "description": "Physical location (for Flipper actions)"
        }
      }
    },
    "command": {
      "type": "string",
      "description": "Full command executed (if applicable)"
    },
    "tool": {
      "type": "string",
      "description": "Tool used",
      "examples": ["nmap", "airodump-ng", "flipper_zero", "metasploit"]
    },
    "justification": {
      "type": "string",
      "description": "Reason for action (references RoE section)",
      "examples": ["Initial reconnaissance per RoE Section 5.1"]
    },
    "outcome": {
      "type": "string",
      "description": "Action outcome",
      "enum": ["success", "failure", "blocked", "error"]
    },
    "findings_count": {
      "type": "integer",
      "description": "Number of findings generated by this action",
      "minimum": 0
    },
    "metadata": {
      "type": "object",
      "description": "Additional action-specific metadata",
      "additionalProperties": true
    },
    "previous_log_hash": {
      "type": "string",
      "description": "SHA-256 hash of previous log entry (for chain integrity)",
      "pattern": "^[a-f0-9]{64}$"
    },
    "signature": {
      "type": "string",
      "description": "Digital signature of this entry (HMAC or RSA)"
    }
  },
  "required": [
    "log_id",
    "timestamp",
    "engagement_id",
    "agent_id",
    "operator_id",
    "action",
    "outcome",
    "previous_log_hash"
  ],
  "additionalProperties": false
}
