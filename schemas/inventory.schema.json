{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kynee.dev/schemas/inventory.schema.json",
  "title": "KYNEÄ’ Asset Inventory",
  "description": "Schema for discovered network assets during reconnaissance",
  "type": "object",
  "properties": {
    "asset_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this asset"
    },
    "engagement_id": {
      "type": "string",
      "description": "Engagement this asset was discovered in"
    },
    "agent_id": {
      "type": "string",
      "description": "Agent device UUID that discovered this asset"
    },
    "discovered_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the asset was first discovered"
    },
    "last_seen": {
      "type": "string",
      "format": "date-time",
      "description": "When the asset was last observed"
    },
    "asset_type": {
      "type": "string",
      "enum": ["host", "network_device", "wireless_ap", "bluetooth_device", "rfid_tag", "nfc_tag", "unknown"]
    },
    "ip_address": {
      "type": "string",
      "format": "ipv4",
      "description": "IPv4 address of the asset"
    },
    "mac_address": {
      "type": "string",
      "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$",
      "description": "MAC address"
    },
    "hostname": {
      "type": "string",
      "description": "Hostname (if resolved)"
    },
    "os_detection": {
      "type": "object",
      "properties": {
        "os_family": {"type": "string", "examples": ["Linux", "Windows", "macOS", "iOS", "Android"]},
        "os_version": {"type": "string"},
        "confidence": {"type": "number", "minimum": 0, "maximum": 100}
      }
    },
    "open_ports": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "port": {"type": "integer", "minimum": 1, "maximum": 65535},
          "protocol": {"type": "string", "enum": ["tcp", "udp"]},
          "service": {"type": "string"},
          "version": {"type": "string"},
          "state": {"type": "string", "enum": ["open", "closed", "filtered"]}
        },
        "required": ["port", "protocol", "state"]
      }
    },
    "wireless": {
      "type": "object",
      "properties": {
        "ssid": {"type": "string"},
        "bssid": {"type": "string"},
        "channel": {"type": "integer"},
        "frequency": {"type": "string"},
        "signal_strength": {"type": "integer"},
        "encryption": {"type": "string", "enum": ["open", "wep", "wpa", "wpa2", "wpa3"]},
        "vendor": {"type": "string"}
      }
    },
    "bluetooth": {
      "type": "object",
      "properties": {
        "address": {"type": "string"},
        "name": {"type": "string"},
        "class": {"type": "string"},
        "rssi": {"type": "integer"},
        "services": {"type": "array", "items": {"type": "string"}}
      }
    },
    "physical": {
      "type": "object",
      "properties": {
        "rfid_uid": {"type": "string"},
        "nfc_uid": {"type": "string"},
        "card_type": {"type": "string"},
        "facility_code": {"type": "integer"},
        "card_number": {"type": "integer"}
      }
    },
    "vendor": {
      "type": "string",
      "description": "Hardware vendor (from MAC OUI lookup)"
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "User-defined tags for organization"
    },
    "notes": {
      "type": "string",
      "description": "Operator notes about this asset"
    }
  },
  "required": [
    "asset_id",
    "engagement_id",
    "agent_id",
    "discovered_at",
    "asset_type"
  ],
  "additionalProperties": false
}
